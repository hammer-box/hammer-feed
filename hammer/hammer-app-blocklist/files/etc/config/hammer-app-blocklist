config global 'settings'
	option enabled '1'
	option home '/usr/share/blocklist'
	option updateInterval 'daily'

config blocklist 'p2p_paranoid'
	option url 'http://list.iblocklist.com/?list=bt_level2&fileformat=p2p&archiveformat=gz'
	option description 'Many portal-type websites. ISP ranges that may be dodgy for some reason. Ranges that belong to an individual, but which have not been determined to be used by a particular company. Ranges for things that are unusual in some way. The level3 list is aka the paranoid list.'
	option author 'Bluetack'
		option author_url 'http://bluetack.co.uk'
	option name 'bt_level3'
	option enabled '1'
	
config blocklist 'p2p_safe'
	option url 'http://list.iblocklist.com/?list=bt_level2&fileformat=p2p&archiveformat=gz'
	option description 'General corporate ranges. Ranges used by labs or researchers.Proxies. '
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'bt_level3'
	option enabled '1'
	
	
	config blocklist 'p2p_trolls_only'
	option url 'http://list.iblocklist.com/?list=bt_level1&fileformat=p2p&archiveformat=gz'
	option description 'Companies or organizations who are clearly involved with trying to stop filesharing. Companies which anti-p2p activity has been seen from. Companies that produce or have a strong financial interest in copyrighted material. Government ranges or companies that have a strong financial interest in doing work for governments. Legal industry ranges. IPs or ranges of ISPs from which anti-p2p activity has been observed.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'bt_level1'
	option enabled '1'

config blocklist 'bogons'
	option url 'http://list.iblocklist.com/?list=bt_bogon&fileformat=p2p&archiveformat=gz'
	option description 'Unallocated address space.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'bogon'
	option enabled '1'
	
config blocklist 'ads'
	option url 'http://list.iblocklist.com/?list=bt_ads&fileformat=p2p&archiveformat=gz'
	option description 'Contains advertising trackers and a short list of bad/intrusive porn sites.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'ads'
	option enabled '1'
	
config blocklist 'spyware'
	option url 'http://list.iblocklist.com/?list=bt_spyware&fileformat=p2p&archiveformat=gz'
	option description 'Known malicious spyware and adware IP Address ranges.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'spyware'
	option enabled '1'

config blocklist 'microsoft'
	option url 'http://list.iblocklist.com/?list=bt_microsoft&fileformat=p2p&archiveformat=gz'
	option description 'All the known Microsoft ranges.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'microsoft'
	option enabled '1'

config blocklist 'microsoft'
	option url 'http://list.iblocklist.com/?list=bt_spider&fileformat=p2p&archiveformat=gz'
	option description 'Intended to be used by webmasters to block hostile spiders from their web sites.'
	option author 'Bluetack'
	option author_url 'http://bluetack.co.uk'
	option name 'spider'
	option enabled '1'
	
